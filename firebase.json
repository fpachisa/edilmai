{
  "hosting": {
    "public": "client/build/web",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "**/*.@(js|css)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=31536000"
          }
        ]
      }
    ]
  },
  "firestore": {
    "rules": "infra/firebase/firestore.rules", 
    "indexes": "infra/firebase/firestore.indexes.json",
    "database": "production"
  },
  "storage": {
    "rules": "infra/firebase/storage.rules"
  }
}