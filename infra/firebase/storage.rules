rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Restrictive default; open only specific paths later
    match /assets/diagrams/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if false;
    }
    match /exports/reports/{allPaths=**} {
      allow read, write: if false;
    }
  }
}

